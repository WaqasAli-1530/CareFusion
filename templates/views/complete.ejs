    <div class="main--content">
        <div class="header--wrapper">
            <div class="header--title">
                <h2>Dashboard</h2>
            </div>
            
        </div>
    
            <!-- Content -->
    <% if(jobs.length == 0) { %>
    <div class="container text-center mt-5">
        <h3 class="unknown"><b>You have not completed any job...</b></h3>
    </div>
    <% } else { %>
    <div class="container text-center mt-5">
        <h3 class="known"><b>Complete Jobs (<%= jobs.length %>)</b></h3>
    </div>
    <% for (var x = 0; x < jobs.length; x++) { %>
    <div class="container mt-5">
        <div class="apply-box p-3">
            <div style="border-radius: 5px; margin: 0px" class="bg-danger text-white py-1 px-2 d-inline-block">
                <p><%= jobs[x]["skill"] %></p>
            </div>
            <div class="form-container mt-3">
                <div class="formm-control">
                    <p><b>Name : </b> <%= jobs[x]["fullname"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Email :</b> <%= jobs[x]["email"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Gender :</b> <%= jobs[x]["gender"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Posted On: </b> <%= jobs[x]["date"].toISOString().split('T')[0] %></p>
                </div>
    <div class="formm-control">
                    <p><b>Start Date :</b> <%= jobs[x]["start_date"].toISOString().split('T')[0] %></p>
                </div>
    <div class="formm-control">
                    <p><b>End Date :</b> <%= jobs[x]["end_date"].toISOString().split('T')[0] %></p>
                </div>
    <div class="formm-control">
                    <p><b>Start Time :</b> <%= jobs[x]["start_time"] %></p>
                </div>
    <div class="formm-control">
                    <p><b>End Time :</b> <%= jobs[x]["end_time"] %></p>
                </div>
    <div class="formm-control">
                    <p><b>Language Preference :</b> <%= jobs[x]["language"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Price (Rs): </b><%= jobs[x]["price"] %></p>
                </div>
                
    <div class="formm-control">
                    <p><b>Address :</b> <%= jobs[x]["address"] %></p>
                </div>
    <div class="formm-control">
                    <p><b>Description about Service:</b> <%= jobs[x]["detail"] %></p>
                </div>
    
        <% if (jobs[x]["status"] == "Complete") { %>
            <div style="margin-right: 240px;display: inline-block; background-color: blue; border: 2px solid blue; border-radius: 5px; padding: 5px;">
                <p style="color: white; margin: 0;"><b>Payment: <%= jobs[x]["payment"] %></b></p>
            </div>
            <% } %>
            <% if (jobs[x]["seekRat"] == "false" || jobs[x]["seekRat"] == undefined) { %>
            <button class="btn btn-info border-0 fw-bold mt-2 px-4 login-btn rounded-2 " style="margin-left: 250px;" id="open-modal-btn">Rate Seeker</button>
            <div id="rating-modal" class="modal">
                <div class="modal-content">
                    <span class="close-btn">&times;</span>
                    <form class="rating-form">
                        <input type="radio" name="rating" id="star5" value="5"><label for="star5" title="5 stars">★</label>
                        <input type="radio" name="rating" id="star4" value="4"><label for="star4" title="4 stars">★</label>
                        <input type="radio" name="rating" id="star3" value="3"><label for="star3" title="3 stars">★</label>
                        <input type="radio" name="rating" id="star2" value="2"><label for="star2" title="2 stars">★</label>
                        <input type="radio" name="rating" id="star1" value="1"><label for="star1" title="1 star">★</label>
                        <input type="hidden" id="seeker" value="<%= jobs[x]["email"] %>">
                        <input type="hidden" id="job" value="<%= jobs[x]["_id"] %>">
                        <button class="btn btn-info border-0 fw-bold mt-2 px-4 login-btn rounded-2 " style="margin-left: 10px;" type="button" id="submit-rating-btn">Submit Rating</button>
                    </form>
                </div>
            </div>
            <p class="rating-value" id="rating-value"></p>
            <% } %>
                
                    
            </div>
        </div>
    </div>
    <% } %>
    <% } %>
        
        

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        // Sample data for demonstration
        const months = ['January', 'February', 'March', 'April', 'May', 'June'];
        const workloadData = [20, 30, 25, 40, 35, 50];
        const incomeData = [1500, 2000, 1800, 2200, 2500, 2300];
        const tasksCompletedData = [15, 20, 18, 25, 22, 30];

        const workloadConfig = {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Workload',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgb(255, 99, 132)',
                    data: workloadData
                }]
            },
            options: {}
        };

        const incomeConfig = {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Income',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgb(54, 162, 235)',
                    data: incomeData
                }]
            },
            options: {}
        };

        const tasksCompletedConfig = {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: 'Tasks Completed',
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    borderColor: 'rgb(255, 206, 86)',
                    borderWidth: 1,
                    data: tasksCompletedData
                }]
            },
            options: {}
        };

        var ctx1 = document.getElementById('workload-chart').getContext('2d');
        new Chart(ctx1, workloadConfig);

        var ctx2 = document.getElementById('income-chart').getContext('2d');
        new Chart(ctx2, incomeConfig);

        var ctx3 = document.getElementById('tasks-completed-chart').getContext('2d');
        new Chart(ctx3, tasksCompletedConfig);
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          setTimeout(function() {
            document.getElementById('loader-wrapper').style.display = 'none';
            document.getElementById('content').style.display = 'block';
          }, 1000); // Adjust the timeout duration as needed
        });
      </script>
      <script>
        // script.js
document.addEventListener('DOMContentLoaded', () => {
const openModalBtn = document.getElementById('open-modal-btn');
const modal = document.getElementById('rating-modal');
const closeModalBtn = document.querySelector('.close-btn');
const submitRatingBtn = document.getElementById('submit-rating-btn');
const ratingValueDisplay = document.getElementById('rating-value');

openModalBtn.addEventListener('click', () => {
    modal.style.display = 'block';
});

closeModalBtn.addEventListener('click', () => {
    modal.style.display = 'none';
});

window.addEventListener('click', (event) => {
    if (event.target === modal) {
        modal.style.display = 'none';
    }
});

submitRatingBtn.addEventListener('click', async () => {
    const selectedRating = document.querySelector('.rating-form input[name="rating"]:checked');
    if (selectedRating) {
      console.log('Selected Rating:', selectedRating.value);
        ratingValueDisplay.textContent = selectedRating.value;
        modal.style.display = 'none';
        const seeker = document.getElementById('seeker').value;
        const job = document.getElementById('job').value;
        fetch(`http://localhost:3302/provider/rating?value=${selectedRating.value}&seeker=${seeker}&job=${job}`) // must update according to port number
.then((response) => response.json())
.then(window.location.href = 'http://localhost:3302/provider/dashboard')
        console.log(selectedRating.value);
    } else {
        alert('Please select a rating');
    }
});
});

      </script>
