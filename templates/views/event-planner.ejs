    <style>
        #loader-wrapper {
              position: fixed;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background-color: rgba(0, 0, 0, 0.8); /* Light black background */
              display: flex;
              justify-content: center;
              align-items: center;
              z-index: 1000;
            }
        
            .loader {
              display: flex;
              justify-content: space-around;
              width: 60px;
            }
        
            .dot {
              width: 15px;
              height: 15px;
              background-color: white;
              border-radius: 50%;
              animation: blink 1.4s infinite both;
            }
        
            .dot:nth-child(1) {
              animation-delay: 0s;
            }
        
            .dot:nth-child(2) {
              animation-delay: 0.2s;
            }
        
            .dot:nth-child(3) {
              animation-delay: 0.4s;
            }
        
            @keyframes blink {
              0%, 80%, 100% {
                opacity: 0;
              }
              40% {
                opacity: 1;
              }
            }
        
        </style>
        
