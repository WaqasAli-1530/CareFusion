<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CareFusion</title>
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet"> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/provProfile/profile.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- Include jQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="/scripts/provProfile.js"></script>
    <style>
        #loader-wrapper {
              position: fixed;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background-color: rgba(0, 0, 0, 0.8); /* Light black background */
              display: flex;
              justify-content: center;
              align-items: center;
              z-index: 1000;
            }
        
            .loader {
              display: flex;
              justify-content: space-around;
              width: 60px;
            }
        
            .dot {
              width: 15px;
              height: 15px;
              background-color: white;
              border-radius: 50%;
              animation: blink 1.4s infinite both;
            }
        
            .dot:nth-child(1) {
              animation-delay: 0s;
            }
        
            .dot:nth-child(2) {
              animation-delay: 0.2s;
            }
        
            .dot:nth-child(3) {
              animation-delay: 0.4s;
            }
        
            @keyframes blink {
              0%, 80%, 100% {
                opacity: 0;
              }
              40% {
                opacity: 1;
              }
            }
        
        </style>
        
          </head>
        <body>
        <div id="loader-wrapper">
            <div class="loader">
              <div class="dot"></div>
              <div class="dot"></div>
              <div class="dot"></div>
            </div>
          </div>
    <div class="container-1">
        <form class="form-container" autocomplete="off" action="/provider/provProfileAction" enctype="multipart/form-data" onsubmit="return formValidations()" method="post">
            <h2>Become A Service Provider</h2>
            
            <div class="input-group phone-no-group">
                <input type="tel" name="phoneNo" id="phone" required>
                <label>Phone NO</label>
                <span class="line"></span>
            </div>

            <!-- CNIC field -->
            <div class="input-group">
                <input type="text" name="cnic" id="cnic" required>
                <label>CNIC</label>
                <span class="line"></span>
            </div>

            <!-- Address field -->
            <div class="input-group">
                <input type="text" name="address" id="address" required>
                <label>Address</label>
                <span class="line"></span>
            </div>

            <!-- Date of Birth field -->
            <div class="mb-4 pt-3"> 
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="dob" name="dob" required>
            </div>
            
            <!-- Gender field -->
            <div class="mb-2 gender">
                <label class="form-label pt-1">Gender</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="male" value="Male" required>
                    <label class="form-check-label text-black" for="male">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="female" value="Female" required>
                    <label class="form-check-label text-black" for="female">Female</label>
                </div>
            </div>

            <!-- Hometown field -->
            <div class="input-group">
                <input type="text" name="hometown" id="hometown" required>
                <label>Hometown</label>
                <span class="line"></span>
            </div>

            <!-- Skills field -->
            <div class="input-group">
                <div class="skills-container" id="selected-skills-list">
                    <div class="input-wrapper">
                        <input type="text" name="skills[]" class="skill-input" >
                        <label>Skills</label>
                        <span class="line"></span>
                    </div>
                    
                </div>
                <ul id="skills-list"></ul>
                <button type="button" id="add-skill">Add Skill</button>
            </div>
            <!-- About -->
            <div class="input-group">
                <label for="About">About</label>
                <textarea name="about" id="about" cols="30" rows="7" placeholder="Tell us something about you!"></textarea>
            </div>

            <!-- Profile Picture field -->
            <div class="mb-2">
                <label for="profilePicture" class="form-label">Upload Profile Picture</label>
                <input type="file" class="form-control" id="profilePicture" name="profilePicture" accept="image/*">
            </div>

            <!-- Signup button to submit request -->
            <button type="submit">Join Us</button>
        </form>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          setTimeout(function() {
            document.getElementById('loader-wrapper').style.display = 'none';
            document.getElementById('content').style.display = 'block';
          }, 1000); // Adjust the timeout duration as needed
        });
      </script>
</body>
</html