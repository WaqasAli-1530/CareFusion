<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Working Stats</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet"> 
    <link href="/css/statistics.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
    <div class="sidebar">
        <div class="logo"></div>
        <ul class="menu">
            <li>
                <a href="/provider/dashboard">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/provider/profile">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
            </li>
            <li>
                <a href="/provider/statistics">
                    <i class="fas fa-chart-bar"></i>
                    <span>Assigned Jobs</span>
                </a>
            </li>
            <li>
                
                <li>
                    <a href="/provider/completejob">
                        <i class="fas fa-star"></i>
                        <span>Complete Jobs</span>
                    </a>
                </li>
                <li>
                    <a href="/provider/assignJobs">
                        <i class="fas fa-star"></i>
                        <span>Suggested Jobs</span>
                    </a>
                </li>
                
            </ul>
        <ul class="menu">
            <li class="logout"><a href="/signout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
        </ul>
    </div>
    <div class="main--content">
        <div class="header--wrapper">
            <div class="header--title">
                <h2>Dashboard</h2>
            </div>
            
        </div>
    
            <!-- Content -->
    <% if(jobs.length == 0) { %>
    <div class="container text-center mt-5">
        <h3 class="unknown"><b>No Job Assigned To You!!!</b></h3>
    </div>
    <% } else { %>
    <div class="container text-center mt-5">
        <h3 class="known"><b>Assigned Jobs</b></h3>
    </div>
    <% for (var x = 0; x < jobs.length; x++) { %>
    <div class="container mt-5">
        <div class="apply-box p-3">
            <div class="bg-danger text-white py-1 px-2 d-inline-block">
                <p><%= jobs[x]["skill"] %></p>
            </div>
            <div class="form-container mt-3">
                <div class="formm-control">
                    <p><b>Name:</b> <%= jobs[x]["fullname"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Email:</b> <%= jobs[x]["email"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Required Gender:</b> <%= jobs[x]["gender"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Language:</b> <%= jobs[x]["language"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Provider needed on:</b> <%= jobs[x]["date"].toISOString().split('T')[0] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Address:</b> <%= jobs[x]["address"] %></p>
                </div>
                <div class="formm-control">
                    <p><b>Description about Service:</b> <%= jobs[x]["detail"] %></p>
                </div>
                    
            </div>
        </div>
    </div>
    <% } %>
    <% } %>
        
        

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        // Sample data for demonstration
        const months = ['January', 'February', 'March', 'April', 'May', 'June'];
        const workloadData = [20, 30, 25, 40, 35, 50];
        const incomeData = [1500, 2000, 1800, 2200, 2500, 2300];
        const tasksCompletedData = [15, 20, 18, 25, 22, 30];

        const workloadConfig = {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Workload',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgb(255, 99, 132)',
                    data: workloadData
                }]
            },
            options: {}
        };

        const incomeConfig = {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Income',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgb(54, 162, 235)',
                    data: incomeData
                }]
            },
            options: {}
        };

        const tasksCompletedConfig = {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: 'Tasks Completed',
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    borderColor: 'rgb(255, 206, 86)',
                    borderWidth: 1,
                    data: tasksCompletedData
                }]
            },
            options: {}
        };

        var ctx1 = document.getElementById('workload-chart').getContext('2d');
        new Chart(ctx1, workloadConfig);

        var ctx2 = document.getElementById('income-chart').getContext('2d');
        new Chart(ctx2, incomeConfig);

        var ctx3 = document.getElementById('tasks-completed-chart').getContext('2d');
        new Chart(ctx3, tasksCompletedConfig);
    </script>
</body>
</html>
