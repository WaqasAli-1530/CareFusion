<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <title>RESET PASSWORD</title>
    <script>
        function formValidations()
        {
            var password = document.getElementById('password').value;
  var confirmPassword = document.getElementById('cnfrmpassword').value;
  document.getElementById("pwdError").innerHTML = "";
  if (password.length < 8) {
    document.getElementById("pwdError").innerHTML = "Password must be at least 8 digit long!!";
    return false;
  }
  if (confirmPassword.length < 8 || confirmPassword !== password) {
    document.getElementById("pwdError2").innerHTML = "Password doesn't matches!!";
    return false;
  }
        }
    </script>
    <style>
        #loader-wrapper {
              position: fixed;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background-color: rgba(0, 0, 0, 0.8); /* Light black background */
              display: flex;
              justify-content: center;
              align-items: center;
              z-index: 1000;
            }
        
            .loader {
              display: flex;
              justify-content: space-around;
              width: 60px;
            }
        
            .dot {
              width: 15px;
              height: 15px;
              background-color: white;
              border-radius: 50%;
              animation: blink 1.4s infinite both;
            }
        
            .dot:nth-child(1) {
              animation-delay: 0s;
            }
        
            .dot:nth-child(2) {
              animation-delay: 0.2s;
            }
        
            .dot:nth-child(3) {
              animation-delay: 0.4s;
            }
        
            @keyframes blink {
              0%, 80%, 100% {
                opacity: 0;
              }
              40% {
                opacity: 1;
              }
            }
        
        </style>
        
          </head>
        <body>
        <div id="loader-wrapper">
            <div class="loader">
              <div class="dot"></div>
              <div class="dot"></div>
              <div class="dot"></div>
            </div>
          </div>
    <div id="emailform" class="container">
        <form class="form-container" action="/resetpassword" autocomplete="off"
        onsubmit="return formValidations()" method="post">
            <h2>Reset Password</h2>
            <input type="hidden" id="email" name="email" value=<%=email%>>
            
            <!-- Password field -->
            <div class="input-group">
                <input type="password" name="pass" id="password" required>
                <label>Password</label>
                <span class="line"></span>
            </div>
            <div id="pwdError" style="color: white;text-align: center;"></div>
            <div class="input-group">
                <input type="password" name="pass" id="cnfrmpassword" required>
                <label>Confirm Password</label>
                <span class="line"></span>
            </div>
            <div id="pwdError2" style="color: white;text-align: center;"></div>

            
            <!-- submit button to send reset request -->
            <button type="submit" value="submit">Submit</button>
            <div style="color:white;text-align: center;"><%=message%></div>
            <!-- login link -->
            <div class="login">
                <p>Remember your password? <a href="/login">Login</a></p>
            </div>
        </form>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          setTimeout(function() {
            document.getElementById('loader-wrapper').style.display = 'none';
            document.getElementById('content').style.display = 'block';
          }, 1000); // Adjust the timeout duration as needed
        });
      </script>
</body>
</html>
