<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SERVICE SEEKER</title>
    <link rel="stylesheet" href="/css/postJob.css">
    <!--Google Font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet"> 
    <script src="/scripts/postJob.js"></script>
    <style>
        input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    </style>
    <style>
        #loader-wrapper {
              position: fixed;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background-color: rgba(0, 0, 0, 0.8); /* Light black background */
              display: flex;
              justify-content: center;
              align-items: center;
              z-index: 1000;
            }
        
            .loader {
              display: flex;
              justify-content: space-around;
              width: 60px;
            }
        
            .dot {
              width: 15px;
              height: 15px;
              background-color: white;
              border-radius: 50%;
              animation: blink 1.4s infinite both;
            }
        
            .dot:nth-child(1) {
              animation-delay: 0s;
            }
        
            .dot:nth-child(2) {
              animation-delay: 0.2s;
            }
        
            .dot:nth-child(3) {
              animation-delay: 0.4s;
            }
        
            @keyframes blink {
              0%, 80%, 100% {
                opacity: 0;
              }
              40% {
                opacity: 1;
              }
            }
        
        </style>
        
          </head>
        <body>
        <div id="loader-wrapper">
            <div class="loader">
              <div class="dot"></div>
              <div class="dot"></div>
              <div class="dot"></div>
            </div>
          </div>

<div class="container">

    <div class="apply-box">
        <form action="/seeker/jobPostAction" method="POST">
            <div class="text-container">
                <h1 class="hone">Tell us your care and support requirements.</h1>
                <p>
                    Welcome to CareFusion. We are excited to help you find the support you need.
                    To start your job post and connect to workers, please answer the questions below.
                    The CareFusion Platform is a community of thousands of workers from culturally and linguistically diverse backgrounds
                    and various levels of experience and qualifications. You will be assigned your own CareFusion Account Manager
                    who will be in touch once the job has been posted.
                </p>
            </div>
            <h1 class="form-control">Service Post<span class="title"></span></h1>
            <div class="form-container">
                <div class="form-control">
                    <label for="jobRole">Job Category</label>
                    <select name="jobRole" id="jobRole" required>
                        <option value="">Select Job Role</option>
                        <option value="Chef">Chef</option>
                        <option value="Gym Instructor">Gym Instructor</option>
                        <option value="Maid">Maid</option>
                        <option value="Health Care">Health Care</option>
                        <option value="Event-Planner">Event-Planner</option>
                        <option value="Make-Up">Make-Up</option>
                        <option value="Baby Care">Baby Care</option>
                        <option value="Tutor">Tutor</option>
                    </select>
                </div>

                <div class="form-control">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" placeholder="Enter Full Address" required>
                </div>
                <div class="textarea-control">
                    <label for="detail" style="color: black;">Detail About Provider You Need?</label>
                    <textarea name="detail" id="detail" cols="30" rows="7" placeholder="Enter details about provider to want!" required></textarea>
                </div>
                <div class="form-control">
                    <label for="city">City / HomeTown</label>
                    <input type="text" id="city" name="city" placeholder="Enter City" required>
                </div>
                <div class="form-control">
                    <label for="pincode">PinCode</label>
                    <input type="number" id="pincode" name="pincode" placeholder="Enter Pin Code" required>
                </div>
                <div class="form-control">
                    <label for="start_date">Start Date:</label>
                    <input type="date" id="start_date" name="start_date" required>
                </div>
                <div class="form-control">
                    <label for="end_date">End Date:</label>
                    <input type="date" id="end_date" name="end_date" required>
                </div>
                <div class="form-control">
                    <label for="start_time">Start time:</label>
                    <input type="time" id="start_time" name="start_time" required>
                </div>
                <div class="form-control">
                    <label for="end_time">End time:</label>
                    <input type="time" id="end_time" name="end_time" required>
                </div>
                

                <!-- Added Gender Selection -->
                <div class="form-control">
                    <label for="gender">Gender</label>
                    <select name="gender" id="gender">
                        <option value="">Select gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>

                <!-- Added Language Preferences -->
                <div class="form-control">
                    <label for="language">Language Preferences</label>
                    <select name="language" id="language">
                        <option value="">Select Language</option>
                        <option value="urdu">Urdu</option>
                        <option value="english">English</option>
                    </select>
                </div>
                <div class="form-control">
                    <label for="price">Price (Rs)</label>
                    <input type="number" id="price" name="price" required>
                </div><br>
                <div class="button-container">
                    <button type="submit">Post Service</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    setTimeout(function() {
      document.getElementById('loader-wrapper').style.display = 'none';
      document.getElementById('content').style.display = 'block';
    }, 1000); // Adjust the timeout duration as needed

    // Get the form element
    const form = document.querySelector('form');

    // Add event listener for form submission
    form.addEventListener('submit', function(event) {
      // Get the start and end dates
      const startDate = new Date(document.getElementById('start_date').value);
      const endDate = new Date(document.getElementById('end_date').value);

      // Check if end date is greater than start date
      if (endDate < startDate) {
        alert('End date should be greater than start date.');
        event.preventDefault();
        return;
      }

      // Get the start and end times
      const startTime = new Date(`${startDate.toISOString().split('T')[0]}T${document.getElementById('start_time').value}`);
      const endTime = new Date(`${endDate.toISOString().split('T')[0]}T${document.getElementById('end_time').value}`);

      // Check if end time is greater than start time
      if (endTime <= startTime) {
        alert('End time should be greater than start time.');
        event.preventDefault();
        return;
      }
    });
  });
</script>
</body>
</html>
