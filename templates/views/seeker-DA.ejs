<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SERVICE SEEKER</title>
    <link rel="stylesheet" href="/css/seeker-DA.css">
    <!--Google Font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet"> 
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <%- include('seeker-navigation.ejs') %>
        <div class="container">

            <div class="apply-box">
                <form action="/seeker/update_account" method="POST">
                      <div class="text-container">
                        <h1 class="hone fw-bold"> MY ACCOUNT DETAILS</h1>
                      </div>
                      <div class="form-container">
                        <div class="formm-control">
                            <label for="fullname"><b>Full Name*</b></label>
                            <input type="text" id="fullname" name="fullname" value="<%= account.fullname %>" required>
                        </div>
                        <div class="formm-control">
                            <label for="username"><b>Username*</b></label>
                            <input type="text" id="username" name="username" value="<%= account.username %>" required>
                        </div>
                        <div class="formm-control">
                            <label for="email"><b>Email*</b></label>
                            <input type="email" id="email" name="email" value="<%= account.email %>" required  readonly title="Sorry it can't be update">
                        </div>
                        <div class="formm-control">
                            <label for="phone"><b>Phone number*</b></label>
                            <input type="tel" id="phone" name="phone" pattern="[0-9]{11}" value="<%= account.phoneno %>" required>
                        </div>
                        <div class="formm-control">
                          <label for="address"><b>Address*</b></label>
                          <input type="text" id="address" name="address" value="<%= account.address %>" required>                      </div>
                      <div class="formm-control">
                        <button class="btn btn-primary border-0 fw-bold mt-2 px-4 login-btn rounded-2" type="submit">Update</button>
                    </div>
                    </div>
                    
                    
                </form>
            </div>
        </div>

<!--Footer-->

<%- include('seeker-footer.ejs') %>   

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>

