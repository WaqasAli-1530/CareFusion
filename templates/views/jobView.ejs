   <script>
    document.getElementById('price').addEventListener('input', function() {
        var price = this.value;
        var applyButton = document.getElementById('applyButton');
        var baseUrl = applyButton.dataset.baseUrl || applyButton.href; // Use a data attribute or the initial href as the base URL

        // Store the initial base URL in a data attribute if not already stored
        if (!applyButton.dataset.baseUrl) {
            applyButton.dataset.baseUrl = baseUrl;
        }

        // Update the href based on the input price
        if (price) {
            applyButton.href = `${baseUrl}&price=${price}`;
        } else {
            applyButton.href = baseUrl;
        }
    });
</script>
